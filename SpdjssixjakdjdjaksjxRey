-- Toggle Button
local Toggle = Instance.new("TextButton", Main)
Toggle.Size = UDim2.new(0.8,0,0,40)
Toggle.Position = UDim2.new(0.1,0,0.6,0)
Toggle.Text = "START"
Toggle.BackgroundColor3 = Color3.fromRGB(40,40,40)
Toggle.TextColor3 = Color3.fromRGB(0,255,0)
Toggle.Font = Enum.Font.GothamBold
Toggle.TextScaled = true
Instance.new("UICorner", Toggle)

-------------------------------------------------
-- LOGIC
-------------------------------------------------
local running = false

local function runScripts()
	while running do
		local d1 = tonumber(Delay1.Text) or 1
		local d2 = tonumber(Delay2.Text) or 1

		-- SCRIPT 1
		local args1 = {
			{
				vector.create(-277.27850341796875, 15.955794334411621, -170.72816467285156),
				vector.create(-0.6879132390022278, -3.0437064424404525e-08, -0.7257929444313049),
				1.9684292674064636,
				false
			}
		}
		ReplicatedStorage:WaitForChild("communication")
			:WaitForChild("e77e6f17b10845c084872167e63ce023")
			:FireServer(unpack(args1))

		task.wait(d1)

		-- SCRIPT 2
		local args2 = {
			{
				true,
				vector.create(-285.86688232421875, 3.4865164756774902, -180.169921875)
			}
		}
		ReplicatedStorage:WaitForChild("communication")
			:WaitForChild("7b0c4d4af675443d9e585631fce48073")
			:FireServer(unpack(args2))

		task.wait(d2)
	end
end

Toggle.MouseButton1Click:Connect(function()
	running = not running

	if running then
		Status.Text = "Status: RUNNING"
		Status.TextColor3 = Color3.fromRGB(0,255,0)
		Toggle.Text = "STOP"
		Toggle.TextColor3 = Color3.fromRGB(255,80,80)
		task.spawn(runScripts)
	else
		Status.Text = "Status: OFF"
		Status.TextColor3 = Color3.fromRGB(255,80,80)
		Toggle.Text = "START"
		Toggle.TextColor3 = Color3.fromRGB(0,255,0)
	end
end)

print("âœ… Rey Script Hub Loaded Successfully")
