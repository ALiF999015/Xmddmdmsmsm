Toggle.Font = Enum.Font.GothamBold
Toggle.TextScaled = true
Instance.new("UICorner", Toggle)

-------------------------------------------------
-- LOGIC
-------------------------------------------------
local running = false

local function runScripts()
	while running do
		local d1 = tonumber(Delay1.Text) or 1
		local d2 = tonumber(Delay2.Text) or 1

		-- SCRIPT 1
		local args1 = {
			{
				vector.create(-269.9783020019531, 15.866171836853027, -262.7765197753906),
				vector.create(-0.4332737326622009, -2.7589200257693847e-08, -0.9012624025344849),
				1.9519617557525635,
				false
			}
		}
		ReplicatedStorage:WaitForChild("communication")
			:WaitForChild("9362e25a8d224fd987d0d3f50d8249bc")
			:FireServer(unpack(args1))

		task.wait(d1)

		-- SCRIPT 2
		local args2 = {
			{
				true,
				vector.create(-274.2834777832031, 3.4583072662353516, -274.8772277832031)
			}
		}
		ReplicatedStorage:WaitForChild("communication")
			:WaitForChild("fc57ae91538d430fa1ff9a33be3bc18c")
			:FireServer(unpack(args2))

		task.wait(d2)
	end
end

Toggle.MouseButton1Click:Connect(function()
	running = not running

	if running then
		Status.Text = "Status: RUNNING"
		Status.TextColor3 = Color3.fromRGB(0,255,0)
		Toggle.Text = "STOP"
		Toggle.TextColor3 = Color3.fromRGB(255,80,80)
		task.spawn(runScripts)
	else
		Status.Text = "Status: OFF"
		Status.TextColor3 = Color3.fromRGB(255,80,80)
		Toggle.Text = "START"
		Toggle.TextColor3 = Color3.fromRGB(0,255,0)
	end
end)

print("âœ… Script Loaded Successfully")
